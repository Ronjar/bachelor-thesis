      \field{issn}{1046-8781}
      \field{journaltitle}{Simulation \& Gaming}
      \field{langid}{english}
      \field{month}{6}
      \field{number}{3}
      \field{title}{On the {{Architecture}} of {{Game Science}}}
      \field{urlday}{16}
      \field{urlmonth}{5}
      \field{urlyear}{2024}
      \field{volume}{49}
      \field{year}{2018}
      \field{dateera}{ce}
      \field{urldateera}{ce}
