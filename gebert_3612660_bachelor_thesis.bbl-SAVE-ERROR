      \strng{bibnamehash}{5900b306a627b766e3160b1c23b117f2}
      \strng{authorbibnamehash}{5900b306a627b766e3160b1c23b117f2}
      \strng{authornamehash}{74ba12e04f1a6f9417ee0406ccd7ba89}
