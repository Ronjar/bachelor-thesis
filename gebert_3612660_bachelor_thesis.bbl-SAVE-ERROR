      \strng{namehash}{8ee74e66ecc5e97e44821324f5baa99c}
      \strng{fullhash}{c8ef26b1543783a4202bb36e2c8235ca}
      \strng{bibnamehash}{c8ef26b1543783a4202bb36e2c8235ca}
      \strng{authorbibnamehash}{c8ef26b1543783a4202bb36e2c8235ca}
      \strng{authornamehash}{8ee74e66ecc5e97e44821324f5baa99c}
